---
type Props = {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: "left" | "center";
};

const { eyebrow, title, description, align = "left" } = Astro.props;
const alignClass = align === "center" ? "text-center" : "text-left";
---

<div class:list={["max-w-2xl", align === "center" && "mx-auto", alignClass]}>
  {eyebrow && (
    <p class="text-sm font-medium text-muted-foreground">{eyebrow}</p>
  )}
  <h2 class="mt-2 text-balance text-3xl font-semibold tracking-tight sm:text-4xl">
    {title}
  </h2>
  {description && (
    <p class="mt-3 text-pretty text-muted-foreground">{description}</p>
  )}
</div>

