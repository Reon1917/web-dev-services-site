---
import Container from "@/components/site/Container.astro";
import SectionHeading from "@/components/site/SectionHeading.astro";
---

<section id="process" class="border-t border-border/60">
  <Container class="py-16 sm:py-20">
    <SectionHeading
      eyebrow="How It Works"
      title="From First Meeting to Launch"
      description="You share the details—I plan the content, build a fast, responsive site, and launch it with full handover or ongoing maintenance."
    />

    <ol class="mt-10 grid gap-6 lg:grid-cols-4">
      {[
        {
          title: "First Meeting",
          body: "Align on goals, pages, and examples you like.",
        },
        {
          title: "Content Planning",
          body: "Organize your content and next steps so it’s easy to understand.",
        },
        {
          title: "Design & Build",
          body: "I build the site; you review with a preview link and request revisions.",
        },
        {
          title: "Launch & Support Options",
          body: "Go live, then choose full handover or ongoing maintenance.",
        },
      ].map((step, idx) => (
        <li class="rounded-2xl border border-border bg-card p-6 shadow-sm">
          <p class="text-xs font-medium text-muted-foreground">Step {idx + 1}</p>
          <p class="mt-2 text-sm font-semibold">{step.title}</p>
          <p class="mt-2 text-sm text-muted-foreground">{step.body}</p>
        </li>
      ))}
    </ol>
  </Container>
</section>
