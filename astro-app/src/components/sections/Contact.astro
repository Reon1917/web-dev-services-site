---
import Container from "@/components/site/Container.astro";
import SectionHeading from "@/components/site/SectionHeading.astro";
import ButtonLink from "@/components/site/ButtonLink.astro";
import SocialLinks from "@/components/site/SocialLinks.astro";
import { site } from "@/lib/site";

const subject = encodeURIComponent("Website project inquiry");
const body = encodeURIComponent(
  [
    "Hi Reon,",
    "",
    "My business is:",
    "I want a website for:",
    "Pages needed:",
    "My deadline (if any):",
    "",
    "Thank you!",
  ].join("\n")
);
const mailto = `mailto:${site.contactEmail}?subject=${subject}&body=${body}`;
---

<section id="contact" class="border-t border-border/60">
  <Container class="py-16 sm:py-20">
    <div class="grid gap-8 rounded-2xl border border-border bg-card p-8 shadow-sm lg:grid-cols-12 lg:items-center">
      <div class="lg:col-span-7">
        <SectionHeading
          eyebrow="Contact"
          title="Ready to launch something that looks premium?"
          description="Send me a quick message with your business type and what you need. Iâ€™ll reply with the best package and timeline."
        />
      </div>
      <div class="lg:col-span-5">
        <div class="rounded-xl bg-secondary p-5">
          <p class="text-sm font-semibold">Fastest way to reach me</p>
          <p class="mt-2 text-sm text-muted-foreground">
            Book a free consultation (no spam, no forms) or message me directly.
          </p>
          <div class="mt-4 grid gap-2">
            <ButtonLink
              href={site.booking.url}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full"
            >
              {site.booking.label}
            </ButtonLink>
            <ButtonLink href={mailto} variant="secondary" class="w-full">
              Email me
            </ButtonLink>
          </div>
          <SocialLinks class="mt-4" showLabels />
          <p class="mt-3 text-xs text-muted-foreground">
            Tip: include your business name and a website you like.
          </p>
        </div>
      </div>
    </div>
  </Container>
</section>
